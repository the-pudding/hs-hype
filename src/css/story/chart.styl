.chart
	max-width $chart-width
	margin 0 auto
	margin-bottom 3rem
	position relative
	font-family $national

.chart__tooltip
	position absolute
	width 14rem
	display none
	cursor pointer
	transition 100ms opacity ease-in-out
	top 0
	right 0
	transform translate(100%, 8.25rem)
	padding-left 1rem
	visibility hidden
	&.is-visible
		visibility visible
	+mq('bp-7')
		display block

	.tooltip__title
		text-transform uppercase
		set-type-size('small')
		font-weight 700
		margin 0
		&-rank
			color $orange

	li
		set-type-size(root, false)

.chart__meta
	padding 0 1rem
	margin 3rem auto 1.5rem auto
	// max-width $column-width
	text-align center
	&-title
		font-weight 700
		set-type-size('x-large')
		margin 0
		line-height 1.2
		margin-bottom 0.5rem
		.top
			color $orange
		.unranked
			color $blue

	&-sub
		set-type-size('small')
		text-transform uppercase
		margin 0


	&-replay
		background-color $bg
		padding 0.25rem 0.5rem
		border 2px solid $brown
		border-radius 6px

		color $brown
		display flex
		justify-content center
		align-items center
		set-type-size('small')
		text-transform uppercase
		font-weight 700
		// margin-top 0.5rem
		margin 0.5rem auto
		transition background-color 200ms ease-in-out
		svg
			stroke $brown
			transform scale(0.8)
			margin 0 0 0 0.2rem
		&:hover
			background-color lighten($orange, 35)
			transition 200ms ease-in-out

.chart__flow
	height 500px
	position relative
	cursor crosshair
	canvas
		position absolute
		z-index 200
		font-family $national
		pointer-events: none
	svg
		position absolute
		// border 2px solid lighten($brown, 30)
		box-shadow 0 0 3px $brown
		border-radius 6px
		.tooltip__circle
			stroke-width 1px
			stroke $brown
			fill none
			display none
			&.is-visible
				display block
	path
		stroke-width 1px
		fill none

	.g-labels
		.label
			font-family $national
			text-transform uppercase
			fill $brown
			font-weight 700
		.percentage
			font-family $national
			font-weight 700
			set-type-size('small')
			&__top
				fill $orange
			&__underdog
				fill $blue
		.count
			font-family $national
			set-type-size('small')
			fill lighten($brown, 20)


	.annotations__rank
		circle
			fill none
			stroke-width 1px
			stroke $brown
			z-index 200
		text
			font-family $national
			set-type-size('small')
			fill $brown
		line
			stroke-width 1px
			stroke $brown
	.annotations__underdog
		text
			font-family $national
			set-type-size('x-small')
			fill $blue
			text-transform uppercase
		line
			stroke-width 1px
			stroke $blue

	.g-bg
		.bg-block
			fill darken($bg, 4)
		text
			font-family $national
			text-transform uppercase
			fill darken($bg, 50)
