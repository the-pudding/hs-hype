.intro
	margin 0 auto
	padding 6rem 1rem 0rem 1rem
	position relative
	max-width 80rem

	&__hed
		max-width 60rem
		margin 0 auto
		text-align center
		set-type-size('xxxxx-large')
		font-weight 900
		font-family: $national

	&__dek
		max-width 30rem
		margin 0 auto
		margin-top 1rem
		text-align center
		font-family $national
		set-type-size('large')

	&__line
		display flex
		max-width 30rem
		margin 0 auto 3rem auto
		font-family $national
		align-items: baseline

	&__byline
		max-width $column-width
		margin 0 auto
		margin-top 1rem
		text-align center
		set-type-size('root')


	&__time
		display block
		max-width $column-width
		margin 0 auto
		margin-top 1rem
		text-align center
		set-type-size('root')

	&__media
		position absolute
		width 18rem

		&--left
			left 1rem
			top 35.5rem
		
		&--right
			right 1rem
			top 50rem
	
	video
		display block
		box-shadow 0 0 3px $brown
		border-radius 6px