<div class='intro'>
	<h1 class='intro__hed'>{{doc.hed}}</h1>
	<p class='intro__dek'>{{doc.dek}}</p>
	<div class='intro__line'>
		<p class='intro__byline'>By
			<a href='{{doc.author1URL}}' target='_blank'>
				<strong>{{doc.author1}}</strong>
			</a> & <a href='{{doc.author2URL}}' target='_blank'><strong>{{doc.author2}}</strong></a>
		</p>
		<p class='emoji'>🏀</p>
		<time class='intro__time'>{{doc.date}}</time>
	</div>

	<div class='prose'>
		{{#each doc.intro}}
		<p>{{{value}}}</p>
		{{/each}}
	</div>

	<div class='intro__media intro__media--left'>
		<video src='assets/video/zion-web.mp4' muted autoplay loop></video>
	</div>

	<div class='intro__media intro__media--right'>
		<video src='assets/video/lamelo-web.mp4' muted autoplay loop></video>
	</div>
	
</div>
